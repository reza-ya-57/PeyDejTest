@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PeyDej.Services.Pagination.PaginatedList<PeyDej.Models.Bases.Motor>
<form asp-action="Motor" method="post">
    <div class="row">
        <div class="col-12">
            <h3>لیست موتورهای نیاز به بازرسی</h3>
            <hr />
            <p>
                <button type="submit" class="btn btn-primary" name="btnName" value="print" target="_blank">چاپ فرم</button>
                <button type="submit" class="btn btn-success" name="btnName" value="save" target="_blank">ثبت نتایج</button>
            </p>
            <hr />
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <span>جستجو</span>
                </div>
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-3">
                            <partial name="Partials/_PageSize" model='("Inspection","Motor")' />
                        </div>
                        <div class="col-8">
                            <label class="text-left">از تاریخ: <input value="@ViewBag.startDate" readonly="readonly" id="start_date" name="start_date" class="form-control text-center" type="text" /></label>
                            <label class="text-left">تا تاریخ: <input value="@ViewBag.endDate" readonly="readonly" id="end_date" name="end_date" class="form-control text-center" type="text" /></label>
                            <button type="submit" class="btn btn-primary" name="btnName" value="search" target="_blank">جستجو</button>

                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <table id="datatables-reponsive" class="table table-striped table-bordered text-center" style="width: 100%">
                        <thead>
                            <tr>
                                <th>انتخاب</th>
                                <th>نام موتور</th>
                                <th>توضیحات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input class="form-check-input" type="checkbox" name="SelectedFruits" value="@item.Id" id="@item.Id">
                                        <label class="form-check-label" for="@item.Id">
                                            @item.Name
                                        </label>
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <partial name="Partials/_Pagination" model='(Model.HasPreviousPage,Model.HasNextPage,Model.PageIndex,Model.TotalPages,"Inspection","Motor")' />
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/datatables.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Datatables Responsive
            $("#datatables-reponsive").DataTable({
                responsive: true,
                paginate: false,
                previous: false,
                next: false,
                info: false,
                filter: true
            });
        });

    </script>
    <script type="text/javascript">
        $(function () {
            $('#start_date,#end_date').datepicker({
                isRTL: true,
                dateFormat: "yy/mm/dd",
            });
        });

    </script>
}