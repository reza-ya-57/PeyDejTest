<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div class="row">
                        @{
                            sparePartMachine = new SparePartMachine();
                        }
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="@sparePartMachine.SparePartId" class="col-form-label"></label>
                                <select asp-for="@sparePartMachine.SparePartId" class="form-control">
                                    <option name="انتخاب" value="0">انتخاب</option>
                                    @foreach (var item in Model.SpareParts)
                                    {
                                        <option name="@item.Name" value="@item.Id">@item.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="@sparePartMachine.SparePartId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="@sparePartMachine.SparePartCount" class="control-label"></label>
                                <input asp-for="@sparePartMachine.SparePartCount" class="form-control" />
                                <span asp-validation-for="@sparePartMachine.SparePartCount" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="savesparePartMachine()" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">


        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })
        $(function () {
            $('#InspectionStartDateDto,#LubricationStartDateDto,#UtilizationDateDto').datepicker({
                isRTL: true,
                dateFormat: "yy/mm/dd"
            });
        });
        function savesparePartMachine () {


            console.table("@sparePartMachine");
            $('#exampleModal').modal('hide');
            "
        @{
            Model.SparePartMachines.Add(new SparePartMachine()
                {
                    InsDate = DateTime.Now,
                    SparePartCount = sparePartMachine.SparePartCount,
                    SparePartId = sparePartMachine.SparePartId
                });
        }
                ";

        }


    </script>
}