                        <select asp-for="MotorIds" multiple class="form-control">
                            <option name="انتخاب" value="0">انتخاب</option>
                            @foreach (var item in Model.Motors)
                            {
                                <option name="@item.Name" value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <span asp-validation-for="MotorIds" class="text-danger"></span>
                    </div>
                </div>
                <div class=" col-md-8 col-lg-6">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Launch demo modal
                    </button>
                    <table id="datatables-reponsive" class="table table-striped table-bordered text-center" style="width: 100%">
                        <thead>
                            <tr>
                                <th>نام ماشین</th>
                                <th>مدل ماشین</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.SparePartMachines is not null)
                            {
                                @foreach (var item in Model.SparePartMachines)
                                {
                                    var machin = Model.SpareParts.Where(w => w.Id == item.MachineId).FirstOrDefault();
                                    <tr>
                                        <td>@machin.Name</td>
                                        <td>@item.SparePartCount</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
